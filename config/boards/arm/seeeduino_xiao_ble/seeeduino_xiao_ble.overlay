/ {
    mouse_ps2: ps2-mouse {
        compatible = "zmk,ps2-mouse";

        ps2-port = <&uart0>;

        ps2-data-pin = <2>;   /* P0.02 = D0 */
        ps2-clock-pin = <3>;  /* P0.03 = D1 */

        status = "okay";
    };
};

&mouse_ps2 {
    ps2-reset-gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>; /* D4 = P0.04 */
};
