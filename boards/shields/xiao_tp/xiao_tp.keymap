#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define BASE 0
#define MOUSE_TP 1

#define HAS_MOUSE_TP

#ifdef HAS_MOUSE_TP
  // We store the trackpoint settings in a separate file
  // to make organization a little easier.
  #include "include/mouse_tp.dtsi"
#endif  // HAS_MOUSE_TP

/ {
    keymap {
        compatible = "zmk,keymap";
        default_layer {
            display-name = "Base";
            bindings = <
                &kp A
            >;
        };
        mouse_layer {
            display-name = "Mouse";
            bindings = <
                &kp MS_UP
                &kp MS_LEFT
                &kp MS_DOWN
                &kp MS_RIGHT
                &kp MS_BTN1
                &kp MS_BTN2
                &kp MS_BTN3
            >;
        };
    };
};